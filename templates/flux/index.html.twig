<div id="id-container" class="container-fluid">
    <div class="row my-5" style="background: whitesmoke; font-size: 1.3em; padding: 20px">
        <form id = "id-form" class="w-100" action="" method="post">
            <div class="form-row align-items-center justify-content-between">
                
                <div class="col-8 my-3">

                    <input  id="id-input" class="w-100" value ="{{response[1]}}" type="text" placeholder="Entrer l'url" name="url" required>
                
                </div>

                <div id="id-xml-json" class="col-2 my-2 ">

                    <div class="form-check">

                        <label class="checklabel">XML
                            <input type="radio" id="id-xml"name="type" value="xml">
                            <span class="checkmark"></span>
                        </label><br>

                        <label class="checklabel">JSON
                            <input type="radio" id="id-json" name="type" value="json">
                            <span class="checkmark"></span>
                        </label>

                    </div>

                </div>

                <div class="col-2">

                    <button id = "id-submit" type="submit" class="btn btn-secondary my-1"><span>Search</span></button>
                    <br>
                    <button id = "reset-button" class="btn btn-secondary my-1" type="button" onclick="resetInput('id-input', 'actions')">Reset</button>
                
                </div>
            </div>
        </form>

    </div> 
</div>   
            <div id = "actions" class="container">
                <div id="id-response" class="row">
                    <div class"col-12">
                         {{response[3]}}
                    </div>
                </div>
                {% for data in response[0] %}
                <div>
                    <div id = "action" class="row my-5" style="border: solid 1px black; background-color: #FFC107;">
                        <div id = "action-info" class="col-6 my-2" style="background: whitesmoke">
                        
                            <table class = "table" cellpadding = "5" cellspacing = "10" >
                                <tr><td colspan ="2" style="text-align: center; font-size: 1.5em; font-weight: bold">Action nÂ° {{data.index}}</td></tr>
                                <tr><td style="font-size: 1.2em; font-weight: bold">Id Action: </td><td>{{data.id}}</td></tr>
                                <tr><td style="font-size: 1.2em; font-weight: bold">Label: </td><td>{{data.label}}</td></tr>
                                <tr><td style="font-size: 1.2em; font-weight: bold">Front Label: </td><td>{{data.frontLabel}}</td></tr>
                                <tr><td style="font-size: 1.2em; font-weight: bold">Position: </td><td>{{data.position}}</td></tr>
                                <tr><td style="font-size: 1.2em; font-weight: bold">Priority: </td><td>{{data.priority}}</td></tr>
                                <tr><td style="font-size: 1.2em; font-weight: bold">Begin date: </td><td>{{data.BeginDate}}</td></tr>
                                <tr><td style="font-size: 1.2em; font-weight: bold">End date: </td><td>{{data.EndDate}}</td></tr>
                            </table>
                        </div>
                        <div id = "action-html" class="col-6 my-4" style="background: grey; text-align: center">
                            {{data.htmlContent | raw}}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
    


<script>
let opt = {{response[2]}};
if(opt === 0)
    document.getElementById('id-xml').checked = true;
if(opt === 1)
    document.getElementById('id-json').checked = true;


  function resetInput(input, actions){
    document.getElementById(input).value='';
    let element = document.getElementById(actions);
    while (element.firstChild) {
        element.removeChild(element.firstChild);
    }
  }
</script>
{% endblock %}
